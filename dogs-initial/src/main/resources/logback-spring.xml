<?xml version="1.0" encoding="UTF-8" ?>

<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd’T’HH:mm:ss.sss’Z’}] [%25.-25class] [%thread] [%line] [%-5level] %m%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>/var/tmp/lambdajx/mylog.log</File>
        <append>true</append>
        <encoder>
            <pattern>[%d{yyyy-MM-dd'T'HH:mm:ss.sss}] [%25.25class] [%thread] [%line] [%-5level] %m%n</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">

            <!-- rollover daily -->
            <fileNamePattern>/var/tmp/lambdajx/mylog.%d{yyyy-MM-dd HH}.%i.txt</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>

            <!-- keep 30 days' worth of history -->
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>


    <appender name="TOMCAT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>/var/tmp/lambdajx/myTomcatLog.log</File>
        <append>true</append>
        <encoder>
            <pattern>[%d{yyyy-MM-dd'T'HH:mm:ss.sss'Z'}] [%C] [%t] [%L] [%-5p] %m%n</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">

            <!-- rollover daily -->
            <fileNamePattern>/var/tmp/lambdajx/myTomcatLog.%d{yyyy-MM-dd HH}.%i.txt</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>

            <!-- keep 30 days' worth of history -->
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>


    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>

    <logger name="org.springframework.boot" level="OFF">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="com.lambdaschool.webemployees.EmpList" level="OFF">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="org.apache.catalina" level="OFF">
        <appender-ref ref="TOMCAT" />
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="org.apache.coyote" level="OFF">
        <appender-ref ref="TOMCAT" />
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="org.apache.tomcat" level="OFF">
        <appender-ref ref="TOMCAT" />
        <appender-ref ref="STDOUT" />
    </logger>


</configuration>